@model List<Blog>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Blogs</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Settings</th>

                    </tr>
                </thead>
              
                <tbody>
                    @foreach (Blog item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="@item.Img" style="width:35px"></td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a>
                                <a href="#"><i class="fas fa-fw fa-wrench"style="color:green"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash" style="color:red"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>