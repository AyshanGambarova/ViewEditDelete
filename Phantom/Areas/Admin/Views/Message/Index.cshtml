@model List<Messages>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Messages</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Settings</th>


                    </tr>
                </thead>

                <tbody>
                    @foreach (Messages item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash" style="color:red"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>